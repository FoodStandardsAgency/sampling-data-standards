{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Commissioned Sampling Schema",
  "description": "The schema required for sampling data commissioned directly by the FSA.",
  "type": "object",
  "fields": [
    {
      "name": "lab_id",
      "title": "Laboratory Reference",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#string"
      }
    },
    {
      "name": "analysing_lab",
      "title": "Analysing Laboratory",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#string"
      }
    },
    {
      "name": "risk",
      "title": "Risk Name",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#string"
      }
    },
    {
      "name": "test_id",
      "title": "Test Used",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#string"
      }
    },
    {
      "name": "lod_loq",
      "title": "Limits of Detection or Quantification",
      "constraints": {
        "required": false,
        "type": "http://www.w3.org/2001/XMLSchema#string"
      }
    },
    {
      "name": "outcome",
      "title": "Outcome",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#string",
        "enum": ["compliant", "non-compliant", "inconclusive"]
      }
    },
    {
      "name": "sample_timestamp",
      "title": "Sample Timestamp",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#dateTime"
      }
    },
    {
      "name": "certificate_of_analysis",
      "title": "Certificate of Analysis Supplied",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#boolean"
      }
    },
    {
      "name": "photos",
      "title": "Photographs Supplied",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#boolean"
      }
    },
    {
      "name": "product_type",
      "title": "Product Type",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#string"
      }
    },
    {
      "name": "brand_name",
      "title": "Brand Name",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#string"
      }
    },
    {
      "name": "batch_number",
      "title": "Batch Number",
      "constraints": {
        "required": false,
        "type": "http://www.w3.org/2001/XMLSchema#int"
      }
    },
    {
      "name": "country_of_origin",
      "title": "Country of Origin",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#string"
      }
    },
    {
      "name": "shelf_life",
      "title": "Shelf Life",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#dateTime"
      }
    },
    {
      "name": "business_name",
      "title": "Business Name",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#string"
      }
    },
    {
      "name": "business_address_line_1",
      "title": "Business Address Line 1",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#string"
      }
    },
    {
      "name": "business_address_line_2",
      "title": "Business Address Line 2",
      "constraints": {
        "required": false,
        "type": "http://www.w3.org/2001/XMLSchema#string"
      }
    },
    {
      "name": "business_address_line_3",
      "title": "Business Address Line 3",
      "constraints": {
        "required": false,
        "type": "http://www.w3.org/2001/XMLSchema#string"
      }
    },
    {
      "name": "business_postcode",
      "title": "Business Postcode",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#string"
      }
    },
    {
      "name": "business_type",
      "title": "Business Type",
      "constraints": {
        "required": true,
        "type": "http://www.w3.org/2001/XMLSchema#string"
      }
    }
  ]
}
